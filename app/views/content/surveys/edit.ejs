                    <label> <input type="radio" name="QuestionType" value="shortAnswer" id="txt_id">
                        Short Answer </label>

                </div>
                <br>

                <!---------------------------------------------submission and cancel buttons.----------------------------------------- ---->
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                <a href="/survey-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>

            <p id="AutoDateCompleteTest"> </p>
        </div>
    </div>
</div>


<!---------------------------our script section -------------------------------->
<script>

    //broser location
    var creationDateField = document.getElementById('creationDateField');
    var onBrowser = document.getElementById('AutoDateCompleteTest');

    //date object
    let currentDate = new Date();

    //retrieving data from date object.
    let cDate = currentDate.getDate();
    let cMonth = currentDate.getMonth();
    let cYear = currentDate.getFullYear();
    let today = [cYear + '-' + cMonth + '-' + cDate].join()

    //used for setting creation date automatically.
    creationDateField.value = today;

    //used for reference.
    onBrowser.innerHTML = "todays date is " + today;

</script>

