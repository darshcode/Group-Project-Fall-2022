                    value="<%= survey.surveyCreationDate %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="surveyExpiryField">Survey Expiry Date</label>
                    <input type="date" class="form-control"
                    id="surveyExpiryField"
                    placeholder="Enter the Survey Expiry Date"
                    name="surveyExpiryDate" 
                    value="<%= survey.surveyExpiryDate %>"
                    required>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/survey-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
