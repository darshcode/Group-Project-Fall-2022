                        placeholder="Enter the Survey Creation Date" name="surveyCreationDate"
                        value="<%= survey.surveyCreationDate %>" required>
                </div>
                <br>

                <!--setting expiry date-->

                <div class="form-group">
                    <label for="surveyExpiryField">Survey Expiry Date</label>
                    <input type="date" class="form-control" id="surveyExpiryField"
                        placeholder="Enter the Survey Expiry Date" name="surveyExpiryDate"
                        value="<%= survey.surveyExpiryDate %>" required>
                </div>
                <br>

                <!------------------------------------------Section 3, types of question we want to create.------------------------------->
